{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "PUBLIC_BACKEND_URL",
        "USER_URL",
        "APP_ID",
        "PUBLIC_MAINTAINER_URL",
        "WALLET_PUBLIC_KEY",
        "MINT_PUBLIC_KEY"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "env": [
        "PUBLIC_BACKEND_URL",
        "USER_URL",
        "APP_ID",
        "PUBLIC_MAINTAINER_URL",
        "WALLET_PUBLIC_KEY",
        "MINT_PUBLIC_KEY"
      ],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "env": {}
  }
}
